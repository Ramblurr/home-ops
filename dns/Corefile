socozy.casa:53 {
    import /etc/coredns/common.conf
    forward . {$DNS_IP}:54
    alternate original NXDOMAIN,SERVFAIL,REFUSED . {$DNS_IP}:55
}

socozy.casa:54 {
    import /etc/coredns/common.conf
    file /etc/coredns/zones/db.socozy.casa socozy.casa
}

